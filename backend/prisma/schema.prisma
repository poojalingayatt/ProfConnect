generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  FACULTY
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  department String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // One-to-one relation for faculty profile
  facultyProfile FacultyProfile?

  // Follow relationships
  following Follow[] @relation("StudentFollows")
  followers Follow[] @relation("FacultyFollowers")
  studentAppointments Appointment[] @relation("StudentAppointments")
  facultyAppointments Appointment[] @relation("FacultyAppointments")

  availability AvailabilityRule[]

  @@index([email])
  @@index([role])
}

model FacultyProfile {
  userId        Int   @id
  user          User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  bio           String?
  officeLocation String?
  isOnline      Boolean @default(false)

  @@index([userId])
}

model Follow {
  id        Int      @id @default(autoincrement())
  studentId Int
  facultyId Int
  createdAt DateTime @default(now())

  student   User @relation("StudentFollows", fields: [studentId], references: [id], onDelete: Cascade)
  faculty   User @relation("FacultyFollowers", fields: [facultyId], references: [id], onDelete: Cascade)

  // Prevent duplicate follows
  @@unique([studentId, facultyId])

  @@index([studentId])
  @@index([facultyId])
}

model AvailabilityRule {
  id        Int      @id @default(autoincrement())
  facultyId Int
  day       String
  slots     String[]

  faculty   User     @relation(fields: [facultyId], references: [id], onDelete: Cascade)

  @@index([facultyId])
}

enum AppointmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
  COMPLETED
}

model Appointment {
  id          Int                @id @default(autoincrement())
  studentId   Int
  facultyId   Int

  date        DateTime
  slot        String

  title       String
  description String?

  status      AppointmentStatus  @default(PENDING)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  student     User @relation("StudentAppointments", fields: [studentId], references: [id], onDelete: Cascade)
  faculty     User @relation("FacultyAppointments", fields: [facultyId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([facultyId])
  @@index([date])
}
